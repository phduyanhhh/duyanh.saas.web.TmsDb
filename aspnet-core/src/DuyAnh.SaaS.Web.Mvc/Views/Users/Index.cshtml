@using DuyAnh.SaaS.Web.Startup
@using DuyAnh.SaaS.Web.Models.Users
@model UserListViewModel
@{
	ViewBag.Title = L("Users");
	ViewBag.CurrentPageName = PageNames.Users;
	ViewBag.TitleLevel2 = L("Users");
  ViewBag.UrlLevel2 = Url.Action("Index", "Users");
}
@section scripts
{
	<environment names="Development">
		<script src="~/view-resources/Views/Users/Index.js" asp-append-version="true"></script>
	</environment>

	<environment names="Staging,Production">
		<script src="~/view-resources/Views/Users/Index.min.js" asp-append-version="true"></script>
	</environment>
}

<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<div class="row">
							<div class="col-md-6">
								<!--Use for bulk actions-->
								@await Html.PartialAsync("~/Views/Users/Index.AdvancedSearch.cshtml")
							</div>
							<div class="col-md-6">
								<a id="UserCreateModal" class="btn bg-blue float-sm-right">
									<i class="fa fa-plus-square"></i>
									@L("Create")
								</a>
							</div>
						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table id="UsersTable" class="table table-striped table-bordered">
								<thead>
									<tr>
										<th></th>
										<th>@L("UserName")</th>
										<th>@L("FullName")</th>
										<th>@L("EmailAddress")</th>
										<th>@L("IsActive")</th>
										<th style="width: 150px">@L("Actions")</th>
									</tr>
								</thead>
								<tbody></tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>