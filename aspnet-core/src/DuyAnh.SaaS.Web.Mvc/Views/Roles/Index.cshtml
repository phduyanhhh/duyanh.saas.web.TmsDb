@using DuyAnh.SaaS.Web.Startup
@model DuyAnh.SaaS.Web.Models.Roles.RoleListViewModel
@{
	ViewBag.Title = L("Roles");
	ViewBag.CurrentPageName = PageNames.Roles;
	ViewBag.TitleLevel2 = L("Roles");
  ViewBag.UrlLevel2 = Url.Action("Index", "Roles");
}
@section scripts
{
	<environment names="Development">
		<script src="~/view-resources/Views/Roles/Index.js" asp-append-version="true"></script>
	</environment>

	<environment names="Staging,Production">
		<script src="~/view-resources/Views/Roles/Index.min.js" asp-append-version="true"></script>
	</environment>
}
<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<div class="row">
							<div class="col-md-6">
								<!--Use for bulk actions-->
								@await Html.PartialAsync("~/Views/Roles/Index.AdvancedSearch.cshtml")
							</div>
							<div class="col-md-6">
								<a href="javascript:;" id="BtnCreateRoleModal" data-bs-toggle="modal" data-bs-target="#RoleCreateModal" class="btn bg-blue float-sm-right">
									<i class="fa fa-plus-square"></i>
									@L("Create")
								</a>
							</div>
						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table id="RolesTable" class="table table-striped table-bordered">
								<thead>
									<tr>
										<th></th>
										<th>@L("RoleName")</th>
										<th>@L("DisplayName")</th>
										<th style="width: 150px">@L("Actions")</th>
									</tr>
								</thead>
								<tbody>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
